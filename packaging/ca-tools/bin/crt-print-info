#!/bin/bash

EXPECTED_ARGS=1
if [ $# -ne $EXPECTED_ARGS ]
then
	echo "Usage: `basename $0` <crt_filename>"
	exit 1
fi

crt_filename="$1"

if [ ! -f "$crt_filename" ]
then
    echo "File does not exist: \"$crt_filename\""
    exit 1
fi

echo ">>> Printing info for $crt_filename certificate."

openssl x509 -noout -in "$crt_filename" -text
