<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <!-- config parameters -->

  <context-param>
    <param-name>labeling_class</param-name>
    <param-value>com.aerofs.l.AA</param-value>
  </context-param>
  <context-param>
    <param-name>ca_url</param-name>
    <param-value>http://joan-staging.aerofs.com:1029/staging/</param-value>
  </context-param>
  <context-param>
    <!-- must be the same as a res-ref-name defined in a resource-ref below -->
    <param-name>sp_database_resource_reference</param-name>
    <param-value>jdbc/SPDatabase</param-value>
  </context-param>
  <context-param>
    <param-name>verkehr_host</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>verkehr_publish_port</param-name>
    <param-value>9293</param-value>
  </context-param>
  <context-param>
    <param-name>verkehr_admin_port</param-name>
    <param-value>25234</param-value>
  </context-param>
  <context-param>
    <param-name>verkehr_cacert</param-name>
    <param-value>cacert.pem</param-value>
  </context-param>

  <!-- initialization listener -->

  <listener>
    <listener-class>com.aerofs.sp.server.SPLifecycleListener</listener-class>
  </listener>

  <!-- servlets -->

  <servlet>
    <servlet-name>ServletSP</servlet-name>
    <servlet-class>com.aerofs.sp.server.SPServlet</servlet-class>
  </servlet>

  <!-- url mapping -->

  <servlet-mapping>
    <servlet-name>ServletSP</servlet-name>
    <url-pattern>/sp</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- MySQL connection pooling for SPDatabase -->
  <resource-ref>
    <description>
      Resource reference for a java.sql.Connection factory. Initializes/pools connections for
      the database defined in context parameters above.
    </description>
    <res-ref-name>jdbc/SPDatabase</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
