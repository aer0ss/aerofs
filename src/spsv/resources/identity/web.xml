<?xml version="1.0" encoding="UTF-8"?>

<web-app>
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- Database definitions -->
  <context-param>
    <param-name>sp_database_resource_reference</param-name>
    <param-value>jdbc/SPDatabase</param-value>
  </context-param>
  <resource-ref>
    <res-ref-name>jdbc/SPDatabase</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <!-- To enforce serializable sessions. -->
  <distributable/>

  <!-- Initialization listener -->
  <listener>
    <listener-class>com.aerofs.sp.server.listeners.ConfigurationLifecycleListener</listener-class>
  </listener>

  <!-- Servlets -->
  <servlet>
    <servlet-name>ServletIdentity</servlet-name>
    <servlet-class>com.aerofs.sp.server.IdentityServlet</servlet-class>
  </servlet>

  <!-- URL mapping -->
  <servlet-mapping>
    <servlet-name>ServletIdentity</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
