server {
	listen  80;
	rewrite ^(.*) https://$host$1 permanent;
}

server {
	listen 443 default ssl;
	listen [::]:443 ssl default ipv6only=on;
	error_log /var/log/aerofs/webadmin.err.log;
	access_log /var/log/aerofs/webadmin.access.log;
	access_log on;
	charset utf-8;

	error_page 503 /maintenance;

    location /downloads {
            rewrite ^/downloads/(.*)$ https://s3.amazonaws.com/nocache.client.aerofs.com/$1 permanent;
    }

	location / {
		if (-f /opt/web/maintenance) {
			return 503;
		}
		uwsgi_pass 127.0.0.1:8080;
		include uwsgi_params;
		proxy_set_header Host $host;
		uwsgi_param UWSGI_SCHEME https;
		uwsgi_param SCRIPT_NAME "";
	}

	location /maintenance {
		proxy_pass https://www.aerofs.com/maintenance;
	}

	ssl on;
	ssl_certificate /etc/nginx/certs/ssl.cert;
	ssl_certificate_key /etc/nginx/certs/ssl.key;

	ssl_protocols SSLv3 TLSv1;
}
