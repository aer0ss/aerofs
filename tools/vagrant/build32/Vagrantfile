# -*- mode: ruby -*-
# vi: set ft=ruby :
require 'yaml'

Vagrant.configure("2") do |config|
  config.vm.define :lucid do |box|
    box.vm.box = "lucid32"
    box.vm.box_url = "http://files.vagrantup.com/lucid32.box"
    box.vm.network :private_network, ip: "192.168.60.10"
    box.vm.hostname = "lucid32"
    box.vm.provider :virtualbox do |vb|
      vb.gui = false
      vb.customize ["modifyvm", :id, "--name", "lucid32"]
      vb.customize ["modifyvm", :id, "--memory", "1024"]
      vb.customize ["modifyvm", :id, "--cpus", "2"]
      vb.customize ["modifyvm", :id, "--ioapic", "on"]
    end
    box.vm.provision "shell", inline: '/vagrant/provision.sh'
  end
  config.vm.synced_folder "~/repos", "/mnt/repos"
end
