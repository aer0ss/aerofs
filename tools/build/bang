#!/bin/sh

set -e

if [ x"$1" == xprod ]; then
    TYPE=prod
    echo
    echo "!!!!!!!!!!!!!!!!!!!!!!!"
    echo "!!! BANG PRODUCTION !!!"
    echo "!!!!!!!!!!!!!!!!!!!!!!!"
    echo
else
    TYPE=staging
fi

if [ x"$2" == x ]; then
    PASSPHRASE=temp123
else
    PASSPHRASE="$2"
fi

./build $TYPE
./deploy $TYPE "$PASSPHRASE"
if [ $? != 0 ]; then
    exit $?
fi

cd osx/
./build $TYPE
./deploy $TYPE
