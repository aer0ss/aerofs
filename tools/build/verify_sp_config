#!/bin/bash

if [ x"$1" == x ]; then
    echo "usage: $0 [web_xml]"
    echo
    echo "example: $0 java/aerofs/spsv/resources/WEB-INF/sp.web.xml.prod"
    exit 2
fi

WEB_XML="$1"

# now turn on unset variable warnings
set -u

grep -q "\[MYSQL_PASSWORD\]" "$WEB_XML"
if [ $? == 0 ]; then
    echo "You need to update the mysql password before deploying"
    exit 1
fi

exit 0
