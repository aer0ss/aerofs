#!/bin/bash
set -e -u
#
# Upload the OVA artifact and tag the commit used.
#

include common

VERSION=$(docker run --rm aerofs/loader tag)

upload_artifact() {
    local EXT=$1
    local FILE="$(dirname "$0")/../../out.ship/appliance/preloaded/aerofs-appliance-${VERSION}.${EXT}"
    test -r "${FILE}" || {
        echo "${FILE} does not exist." >&2
        exit $ERRBADARGS
    }
    s3cmd --acl-public --guess-mime-type put "${FILE}" s3://aerofs.privatecloud
}

notify_slack() {
    echo ">> notifying team of successful deployment via Slack"

    for room in "#eng" "#success"
    do
        echo "Build notification: Appliance VM ${VERSION} pushed to S3 (by $(whoami)). This version is not yet available to the public." |
            $(git rev-parse --show-cdup)puppetmaster/modules/slack/files/slack_message \
                -r "$room" \
                -c good \
                -u $SLACK_WEBHOOK \
                -f "Build" > /dev/null
    done
}

upload_artifact ova
upload_artifact qcow2
upload_artifact vmdk
notify_slack

echo ">> Go to http://privatecloud.aerofs.com:8000/ to mark this as the current release."
