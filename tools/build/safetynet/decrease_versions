#!/bin/bash -e -u

include safetynet/constants $1

######################################################################
#
# Decreases the version number of the SafetyNet clients' installations.
#
######################################################################
echo ">> decrease SafetyNet clients' versions"

CONFIG=''
create_updated_config_file CONFIG

# Run the SyncDET test that decreases each actor's version number
syncdet.py --config="$CONFIG" "$SAFETYNET_SYNCDET_DEPLOY_DIR" "${GIT_ROOT}/syncdet_test" -s "${SAFETYNET_SYNCDET_DEPLOY_DIR}/decrease_version.scn"
