<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>properties.log</file>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="WARN">
    <appender-ref ref="FILE" />
  </root>

  <logger name="org.arrowfs.config.ArrowConfiguration" level="DEBUG" />

</configuration>
