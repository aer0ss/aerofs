  <!-- Verkehr -->
  <context-param>
    <param-name>verkehr_host</param-name>
    <param-value><%= @verkehr_host %></param-value>
  </context-param>
  <context-param>
    <param-name>verkehr_port</param-name>
    <param-value>9293</param-value>
  </context-param>
  <context-param>
    <param-name>verkehr_cacert</param-name>
    <param-value><%= @cacert_location %></param-value>
  </context-param>

  <!-- Redis -->
  <context-param>
    <param-name>redis_host</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>redis_port</param-name>
    <param-value>6379</param-value>
  </context-param>

  <!-- Initialization listener -->
  <listener>
    <listener-class>com.aerofs.syncstat.server.SyncStatusLifecycleListener</listener-class>
  </listener>

  <!-- Servlets -->
  <servlet>
    <servlet-name>ServletSyncStatus</servlet-name>
    <servlet-class>com.aerofs.syncstat.server.SyncStatusServlet</servlet-class>
  </servlet>

  <!-- URL mapping -->
  <servlet-mapping>
    <servlet-name>ServletSyncStatus</servlet-name>
    <url-pattern>/syncstat</url-pattern>
  </servlet-mapping>
