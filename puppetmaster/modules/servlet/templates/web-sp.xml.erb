  <!-- To enforce serializable sessions. -->
  <distributable/>

  <!-- Verkehr -->
  <context-param>
    <param-name>verkehr_cacert</param-name>
    <param-value>/etc/ssl/certs/AeroFS_CA.pem</param-value>
  </context-param>

  <!-- Initialization listener -->
  <listener>
    <listener-class>com.aerofs.sp.server.SPLifecycleListener</listener-class>
  </listener>

  <!-- Servlets -->
  <servlet>
    <servlet-name>ServletSP</servlet-name>
    <servlet-class>com.aerofs.sp.server.SPServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ServletIdentity</servlet-name>
    <servlet-class>com.aerofs.sp.server.IdentityServlet</servlet-class>
  </servlet>

  <!-- URL mapping -->
  <servlet-mapping>
    <servlet-name>ServletSP</servlet-name>
    <url-pattern>/sp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ServletIdentity</servlet-name>
    <url-pattern>/openid/*</url-pattern>
  </servlet-mapping>
