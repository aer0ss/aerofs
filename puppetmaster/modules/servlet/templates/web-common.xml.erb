  <!-- default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- begin database definitions -->
  <% @databases.each do |database| -%>

  <context-param>
    <!-- must be the same as a res-ref-name defined in a resource-ref below -->
    <param-name><%= database["param_name"] %></param-name>
    <param-value>jdbc/<%= database["name"] %></param-value>
  </context-param>

  <!-- jdbc resource -->

  <resource-ref>
    <description>
      Resource reference for a java.sql.Connection factory. Initializes/pools connections for
      the database defined in context parameters above.
    </description>
    <res-ref-name>jdbc/<%= database["name"] %></res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <% end -%>

  <!-- end database definitions -->
